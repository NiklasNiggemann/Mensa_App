<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mensa_App.MVVM.View"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Mensa_App.MVVM.View.SelectionView"
             Title="Auswahl">
    
    <ScrollView>

        <VerticalStackLayout>

            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

                <Label Text="Auswahl:" HorizontalOptions="Center"/>

                <Label Text="{Binding MainDishName}" HorizontalTextAlignment="Center" Padding="5" FontSize="Subtitle"/>

            </VerticalStackLayout>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>