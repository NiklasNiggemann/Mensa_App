<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mensa_App.Classes.View.MenuView"
             Title="MenuView"
             BackgroundColor="AntiqueWhite">

    <ScrollView>
        
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                <Label Text="Hauptgerichte" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" FontSize="Large"/>
                <CollectionView SelectionMode="Multiple"
                                ItemsSource="{Binding Menu.MainMenu}"
                                SelectedItems="{Binding SelectedMains}"
                                SelectionChangedCommand="{Binding SelectedMainsCommand}"
                                SelectionChanged="CollectionView_SelectionChanged"
                                HorizontalOptions="Center" VerticalOptions="Center">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout WidthRequest="400" HorizontalOptions="Center" VerticalOptions="Center" Padding="10">
                            <Label Text="{Binding Name}" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Subtitle"/>
                            <Label Text="{Binding Price}" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Small"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                <Label Text="Nebengerichte" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" FontSize="Large"/>
                <CollectionView SelectionMode="Multiple"
                                ItemsSource="{Binding Menu.SideMenu}"
                                HorizontalOptions="Center" VerticalOptions="Center">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout WidthRequest="400" HorizontalOptions="Center" VerticalOptions="Center" Padding="10">
                                <Label Text="{Binding Name}" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Subtitle"/>
                                <Label Text="{Binding Price}" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Small"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                <Label Text="Suppe" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" FontSize="Large"/>
                <CollectionView SelectionMode="Multiple"
                                ItemsSource="{Binding Menu.SoupMenu}"
                                HorizontalOptions="Center" VerticalOptions="Center">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout WidthRequest="400" HorizontalOptions="Center" VerticalOptions="Center" Padding="10">
                                <Label Text="{Binding Name}" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Subtitle"/>
                                <Label Text="{Binding Price}" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Small"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                <Label Text="Dessert" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" FontSize="Large"/>
                <CollectionView SelectionMode="Multiple"
                                ItemsSource="{Binding Menu.DessertMenu}"
                                HorizontalOptions="Center" VerticalOptions="Center">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout WidthRequest="400" HorizontalOptions="Center" VerticalOptions="Center" Padding="10">
                                <Label Text="{Binding Name}" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Subtitle"/>
                                <Label Text="{Binding Price}" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Small"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                
                <Label Text="Auswahl" HorizontalTextAlignment="Center" TextColor="Black" FontSize="Large"/>
                
                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="10">
                    <Label Text="Preis: " HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Subtitle"/>
                    <Label Text="{Binding SelectedMainsSum}" BindingContext="{Binding MenuView}" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Small"/>
                </HorizontalStackLayout>

                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="10">

                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="5">
                        <Label Text="Kalorien: " HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Subtitle"/>
                        <Label Text="XXX" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Small"/>
                        <Label Text="Fett: " HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Subtitle"/>
                        <Label Text="XXX" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Small"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="5">
                        <Label Text="Kohlenhydrate: " HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Subtitle"/>
                        <Label Text="XXX" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Small"/>
                        <Label Text="EiweiÃŸ: " HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Subtitle"/>
                        <Label Text="XXX" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Small"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>

                <VerticalStackLayout WidthRequest="400" HorizontalOptions="Center" VerticalOptions="Center" Padding="10">
                    <Label Text="Inhaltsstoffe: " HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Subtitle"/>
                    <Label Text="XXX" HorizontalTextAlignment="Center" Padding="5" TextColor="Black" FontSize="Small"/>
                </VerticalStackLayout>

            </VerticalStackLayout>

        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>