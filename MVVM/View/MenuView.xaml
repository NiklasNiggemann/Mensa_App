                                                    </VerticalStackLayout>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </VerticalStackLayout>
                
                                    -->

                                </VerticalStackLayout>

                            </VerticalStackLayout>

                        </DataTemplate>

                    </CollectionView.ItemTemplate>

                </CollectionView> !

            </VerticalStackLayout>

        </ScrollView>

    </ContentPage>

